@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_RoomLayout.cshtml";
}
<div style="height: 100%" class="col-md-12">
    <div style="height: 100%" class="row">
        <div id="col12" style="height: 100%" class="col-md-12">
            <div style="height: 100%" class="row">
                <div style="height: 98%" class="col-md-9">
                    <iframe width="100%" height="98%" src="https://www.youtube.com/embed/tgbNymZ7vqY?autoplay=1"></iframe>
                </div>
                <div style="height: 90%" class="col-md-3">
                    <div style="height: 100%" class="chat-panel panel panel-default">
                        <div class="panel-heading">
                            ChatBox using SingalR
                            <i class="fa fa-paper-plane fa-fw"></i>
                        </div>
                        <div style="height: 95%" class="messaging panel-body" id="chat">
                            <input type="hidden" id="displayname" />
                            <input type="hidden" id="room" />
                            @Html.Hidden("room", (object)ViewBag.room)
                            <input type="hidden" id="messajearea" />
                            <br />
                        </div>
                        <div class="panel-footer">
                            <div id="divtext" class="input-group">
                                <input id="message" type="text" name="message" class="form-control input-sm" placeholder="Escriba su mensaje aqui..." />
                                <div class="input-group-append">
                                    <span class="input-group-text send_btn"><i class="fas fa-location-arrow"></i></span>
                                </div>
                                <span class="input-group-btn">
                                    <input type="button" class="btn btn-warning btn-sm" id="sendmessage" value="Enviar">
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <!--Script references. -->
    <link href="~/Content/chat.css" rel="stylesheet" />
    <!--EmojiOneArea -->
    <link href="~/Content/emojionearea.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/Chat.js"></script>
    <script src="~/Scripts/emojionearea.js"></script>
}
